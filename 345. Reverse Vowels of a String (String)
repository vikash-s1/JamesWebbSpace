class Solution {
    bool isVowel(char ch) {
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            return true;
        }

        if (ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U') {
            return true;
        }

        return false;
    }
public:
    string reverseVowels(string s) {
        int i = 0;
        int j = s.length() - 1;

        string result = "";

        while (i < j) {
            if (isVowel(s[i]) && isVowel(s[j])) {
                char ch = s[i];
                s[i] = s[j];
                s[j] = ch;
                i++;
                j--;
            } else if (!isVowel(s[i])) {
                i++;
            } else if (!isVowel(s[j])) {
                j--;
            }
        }

        return s;
    }
};
